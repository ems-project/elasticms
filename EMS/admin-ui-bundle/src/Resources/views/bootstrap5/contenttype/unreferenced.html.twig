{% extends '@EMSAdminUI/bootstrap5/base/admin.html.twig' %}{% trans_default_domain 'EMSCoreBundle' %}

{% block title %}Add a referenceable content type{% endblock %}
{% block pagetitle %}Add a referenceable content type{% endblock %}

{% block breadcrumb %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a href="{{ path("contenttype.index") }}"><i class="fa fa-cubes"></i> Content Types</a></li>
		<li class="breadcrumb-item active">add referenceable content type</li>
	</ol>
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12">
			<div class="card card-{{ theme_color }} card-outline">
				<div class="card-header">
					<h3 class="card-title"><i class="fa fa-sitemap"></i> Referenceable content types</h3>
				</div>
				<!-- /.box-header -->
				<div class="card-body">
					<div class="table-responsive">
						<table class="table table-condensed table-striped">
							<tbody>
							<tr>
								<th class="text-center" style="width: 10px">#</th>
								<th class="" style="">Name</th>
								<th>Index</th>
								<th>Action</th>
							</tr>
							{% for contentType in referencedContentTypes %}
								<tr class="">
									<td class="text-center">{{ loop.index }}.</td>
									<td>{{ contentType.name }}</td>
									<td>{{ contentType.alias }}</td>
									<td>
										<div class="btn-group">
											{% include '@EMSAdminUI/bootstrap5/elements/post-button.html.twig' with {
												'url':  path('contenttype.unreferenced', {'name': contentType.name, 'envId': contentType.envId}),
												'label': 'Add',
												'icon': 'plus'
											} %}
										</div>
									</td>
								</tr>
							{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
				<!-- /.box-body -->
			</div>
		</div>
	</div>
{% endblock %}
