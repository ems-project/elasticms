<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="emsco_wysiwyg_styleset_iframe_preview" path="/styleset/iframe-preview/{name}/{language}"
           controller="EMS\CoreBundle\Controller\Wysiwyg\StylesetController::iframePreview"
           methods="GET"/>

    <route id="emsco_wysiwyg_styleset_iframe_editor" path="/styleset/iframe-editor/{name}/{language}"
           controller="EMS\CoreBundle\Controller\Wysiwyg\StylesetController::iframeEditor"
           methods="GET"/>

    <route id="emsco_wysiwyg_ajax_paste" path="/ajax/{wysiwygProfileId}/paste"
           controller="EMS\CoreBundle\Controller\Wysiwyg\AjaxPasteController"
           methods="POST" />
</routes>
