<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="ems_common_file_view" path="/file/view/{sha1}"
           controller="ems_common.controller.file::view"
           methods="GET"/>
    <route id="ems_common_file_download" path="/file/download/{sha1}"
           controller="ems_common.controller.file::download"
           methods="GET"/>
    <route id="ems_asset" path="/file/{hash_config}/{hash}/{filename}"
           controller="ems_common.controller.file::asset"
           methods="GET"/>
</routes>