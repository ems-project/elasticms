{% extends '@EMSAdminUI/bootstrap5/admin-form/abstract.html.twig' %}
{% trans_default_domain 'emsco-twigs' %}

{% block title %}{{ 'form.reorder.title'|trans({'%label%': entity.label}) }}{% endblock %}

{% block breadcrumb_items %}<li class="breadcrumb-item active">{{ block('title') }}</li>{% endblock breadcrumb_items %}

{% block body %}
<div class="row">
	<div class="col-md-12">
		<div class="card card-light">
            {{ form_start(form) }}
				<div class="card-body p-0">
					<ol class="nested-sortable vertical" id="root-list" data-nested-max-level="15" data-nested-is-tree="true">
						{% include "@EMSAdminUI/bootstrap5/contenttype/reorder_item.html.twig" with {
							parent: entity.fieldType
						} %}
					</ol>
				</div>
				<div>
					<div class="card-footer">
						<div class="btn-group">
							{{ form_widget(form.reorder) }}
						</div>
					</div>
				</div>
			{{ form_end(form) }}
		</div>
	</div>
</div>
{% endblock %}
