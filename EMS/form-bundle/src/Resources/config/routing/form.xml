<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="emsf_iframe" path="/iframe/{ouuid}/{_locale}"
           controller="emsf.controller.form::iframe"
           methods="GET">
        <default key="_locale">%locale%</default>
    </route>
    <route id="emsf_form" path="/form/{ouuid}/{_locale}"
           controller="emsf.controller.form::submitForm"
           methods="POST">
        <default key="_locale">%locale%</default>
    </route>
    <route id="emsf_init_form" path="/init-form/{ouuid}/{_locale}"
           controller="emsf.controller.form::initForm"
           methods="POST">
        <default key="_locale">%locale%</default>
    </route>
    <route id="_emsf_dynamic_field_ajax" path="/ajax/{ouuid}/{_locale}"
           controller="emsf.controller.form::dynamicFieldAjax"
           methods="POST">
        <default key="_locale">%locale%</default>
    </route>
    <route id="emsf_confirmation" path="/form/send-confirmation/{ouuid}/{_locale}"
           controller="emsf.controller.confirmation::postSend"
           methods="POST">
        <default key="_locale">%locale%</default>
    </route>
</routes>
