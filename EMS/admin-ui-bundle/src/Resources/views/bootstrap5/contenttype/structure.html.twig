{% extends '@EMSAdminUI/bootstrap5/base/admin.html.twig' %}{% trans_default_domain 'EMSCoreBundle' %}

{% block title %}Edit "{{ contentType.singularName }}"  structure{% endblock %}
{% block pagetitle %}Edit "{{ contentType.singularName }}" structure{% endblock %}

{% block breadcrumb %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item"><a href="{{ path("emsco_admin_content_type_index") }}"><i class="fa fa-cubes"></i> Content Types</a></li>
		<li class="breadcrumb-item"><a href="{{ path("emsco_admin_content_type_edit", {contentType: contentType.id}) }}"><i class="{{ contentType.icon }}"></i> Edit {{ contentType.singularName }}</a></li>
		<li class="breadcrumb-item active">Structure</li>
	</ol>
{% endblock %}

{% block body %}
	{{ form_start(form) }}
	<div class="row">
		<div class="col-12">

			<div class="card card-{{ theme_color }} card-outline">
				<div class="card-header">
					<h3 class="card-title"><i class="fa fa-sitemap"></i> {{ contentType.singularName }}'s metas</h3>
				</div>
				<!-- /.box-header -->
				<div class="card-body">
						{{ form_row(form.fieldType) }}
				</div>
				<!-- /.box-body -->
				<div class="card-footer text-end">
					<div class="btn-group">
						{{ form_widget(form.save) }}
						{{ form_widget(form.saveAndClose) }}
						{{ form_widget(form.saveAndReorder) }}
					</div>
				</div>
			</div>
		</div>
	</div>

	{{ form_end(form) }}
{% endblock %}
