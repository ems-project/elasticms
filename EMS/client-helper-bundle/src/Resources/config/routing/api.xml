<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="emsch_api_content_types" path="{apiName}/content-types"
           controller="EMS\ClientHelperBundle\Controller\ApiController::contentTypes"
           methods="GET"/>
    <route id="emsch_api_content_type" path="{apiName}/content-types/{contentType}"
           controller="EMS\ClientHelperBundle\Controller\ApiController::contentType"
           methods="GET"/>
    <route id="emsch_api_document" path="{apiName}/content-types/{contentType}/{ouuid}"
           controller="EMS\ClientHelperBundle\Controller\ApiController::document"
           methods="GET"/>
</routes>