{% extends '@EMSAdminUI/bootstrap5/user/profile/show.html.twig' %}
{%- trans_default_domain 'user' -%}

{% block title %}{{ 'user.profile.edit.title'|trans }}{% endblock title %}

{% block breadcrumb %}
    {% set breadcrumb = {(path('emsco_user_profile_edit')): 'user.profile.edit.breadcrumb_title'|trans}|merge(breadcrumb)  %}
    {{ parent() }}
{% endblock breadcrumb %}

{% block body %}
    {{ form_start(form, { 'action': path(routes.USER_PROFILE_EDIT) }) }}
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-{{ theme_color }} card-outline">
                <div class="card-body">
                    {{ form_row(form.displayName) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.emailNotification) }}
                    {{ form_row(form.current_password) }}

                    {{ form_row(form.layoutBoxed) }}
                    {{ form_row(form.sidebarMini) }}
                    {{ form_row(form.sidebarCollapse) }}

                    {% if form.userOptions.children|length > 0 %}
                        {{ form_row(form.userOptions) }}
                    {% else %}
                        {{ form_widget(form.userOptions) }}
                    {% endif %}

                    {{ form_row(form.locale) }}
                    {{ form_row(form.localePreferred) }}

                    {{ form_row(form.wysiwygProfile) }}
                </div>
                <div class="card-footer">
                    {{ form_row(form._token) }}
                    <input type="submit" value="Update" class="btn btn-primary"/>
                    <a href="{{ path(routes.USER_PROFILE) }}" class="btn float-end btn-default">{{ 'user.profile.show.action.cancel'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock body %}
