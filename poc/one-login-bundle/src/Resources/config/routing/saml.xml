<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd">


    <route id="emsch_security_saml_metadata" path="/saml/metadata"
           controller="EMS\OneLoginBundle\Controller\SamlController::metaData"
           methods="GET"/>
    <route id="emsch_security_saml_acs" path="/saml/acs"
           controller="EMS\OneLoginBundle\Controller\SamlController::acs"
           methods="POST"/>
    <route id="emsch_security_saml_login" path="/saml/login"
           controller="EMS\OneLoginBundle\Controller\SamlController::login"
           methods="GET"/>
    <route id="emsch_security_saml_logout" path="/saml/logout"
           controller="EMS\OneLoginBundle\Controller\SamlController::logout"
           methods="GET"/>

</routes>
