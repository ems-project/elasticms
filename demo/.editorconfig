# editorconfig.org
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = LF
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{php,html,twig,js}]
indent_size = 4

[COMMIT_EDITMSG]
max_line_length = 0
