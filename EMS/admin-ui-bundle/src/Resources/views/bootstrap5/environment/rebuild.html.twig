{% extends '@EMSAdminUI/bootstrap5/base/admin.html.twig' %}{% trans_default_domain 'EMSCoreBundle' %}

{% block title %}Rebuild the environment {{environment.name}}{% endblock %}
{% block pagetitle %}Rebuild the environment {{environment.name}}{% endblock %}
{% block breadcrumb %}
	<ol class="breadcrumb">
		<li><i class="fa fa-database"></i> Environments</li>
		<li><a href={{ path('environment.index') }}>List Environments</a></li>
   		<li class="active">Rebuild index</li>
   	</ol>
{% endblock %}

{% block body %}
<div class="row">
	<div class="col-md-6">
		<div class="card card-warning card-outline">
			<div class="card-header">
				<h3 class="card-title"><i class="fa fa-warning"></i> Notice</h3>
			</div>
			<!-- /.box-header -->
			<div class="card-body">
				<p>
					Be cautious, depending of the option selected some content in the search index may be lost.
				</p>
			</div>
			<!-- /.box-body -->
		</div>
	</div>
	<div class="col-md-6">
		<div class="card card-{{ theme_color }} card-outline">
			<div class="card-header">
				<h3 class="card-title">Select your options</h3>
			</div>
			<!-- /.box-header -->
			<!-- form start -->
			{{ form_start(form) }}
				<div class="card-body">
					{{ form_row(form.option) }}
				</div>
				<!-- /.box-body -->
				<div class="card-footer">
					<div class="btn-group text-end">
						{{ form_widget(form.rebuild) }}
					</div>
				</div>
				<!-- /.box-footer -->

			{{ form_end(form) }}
		</div>
	</div>
</div>
{% endblock %}
