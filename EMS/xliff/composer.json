{
	"name" : "elasticms/xliff",
	"description" : "Generate and lod XLIFF files from associative arrays",
	"type" : "library",
	"keywords" : [
		"php",
		"phpstan",
		"xliff"
	],
	"license" : "MIT",
	"authors" : [{
			"name" : "David Mattei",
			"email" : "david.mattei@smals.be"
		},
		{
			"name" : "Mathieu De Keyzer",
			"email" : "mathieu@dekeyzer.net"
		}
	],
	"require" : {
		"php": "^7.4",
        "ext-dom": "*",
        "elasticms/helpers": "^1.0",
        "symfony/dom-crawler": "^5.4",
        "symfony/property-access": "^5.4"
    },
	"require-dev" : {
		"friendsofphp/php-cs-fixer" : "^3.0",
		"mockery/mockery" : "^0.9",
		"phpstan/phpstan": "^1.0",
		"phpunit/phpunit" : "^9.5",
		"phpstan/phpstan-phpunit": "^0.12.8",
		"phpstan/extension-installer": "^1.1"
	},
	"autoload" : {
		"psr-4" : {
			"EMS\\Xliff\\" : "src/"
		},
		"exclude-from-classmap" : [
			"tests/"
		]
	},
	"autoload-dev" : {
		"psr-4" : {
			"EMS\\Xliff\\Tests\\" : "tests/"
		}
	},
	"config": {
		"lock": false,
		"sort-packages": true,
		"allow-plugins": {
			"phpstan/extension-installer": true
		}
	},
	"extra" : {
		"branch-alias" : {
			"dev-master" : "0.1-dev"
		}
	},
	"scripts": {
		"phpcs": "php-cs-fixer fix",
		"phpstan": "phpstan analyse",
		"phpunit":  "phpunit",
		"phpall": "php-cs-fixer fix && phpunit && phpstan analyse"
	}
}
