{
  "name": "elasticms/helpers",
  "description": "Enclose and simplify regular PHP functions in PHPStan compliant functions",
  "type": "library",
  "keywords": [
    "php",
    "phpstan",
    "helpers"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "EMS Community",
      "homepage": "https://github.com/ems-project/helpers/contributors"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "ext-tidy": "*",
    "symfony/html-sanitizer": "6.4.*",
    "symfony/options-resolver": "6.4.*",
    "symfony/mime": "6.4.*"
  },
  "require-dev": {
    "mockery/mockery": "^1.6",
    "phpstan/extension-installer": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "EMS\\Helpers\\": "src/"
    },
    "exclude-from-classmap": [
      "tests/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "EMS\\Helpers\\Tests\\": "tests/"
    }
  },
  "config": {
    "lock": false,
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.1-dev"
    }
  },
  "scripts": {
    "phpunit": "phpunit"
  }
}
