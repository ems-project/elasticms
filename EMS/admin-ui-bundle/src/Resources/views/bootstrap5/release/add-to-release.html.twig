{% extends '@EMSAdminUI/bootstrap5/base/admin.html.twig' %}
{% trans_default_domain 'EMSCoreBundle' %}

{% block title %}{{ 'pick-a-release.title'|trans({'%label%': revision.label}) }}{% endblock %}
{% block pagetitle %}{{ block('title') }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('emsco_view_revisions', {type: revision.contentType.name, ouuid: revision.ouuid, revisionId: revision.id}) }}"><i class="{{ revision.contentType.icon|default('fa fa-book') }}"></i> {{ revision.label }}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block body %}
    {% form_theme form '@EMSAdminUI/bootstrap5/form/forms.html.twig' %}
    {{ form(form) }}
{% endblock %}
