{% extends '@EMSCH/template/base/bootstrap.html.twig' %}
{% trans_default_domain trans_default_domain %}

{% block body_class %}error-page{% endblock %}

{% set type = (status_code/1) < 500 ? 'warning' : 'danger' %}

{% block title %}{{ status_text }}{% endblock %}

{% block main %}
    <div class="jumbotron mb-0">
        <div class="container-fluid container-lg">
            <section class="py-5 py-lg-8">
                <div class="row">
                    <div class="col-12 col-md-6 col-xl-5 offset-xl-1">
                        <h1>{% block icon %}<i class="fa fa-exclamation-triangle" aria-hidden="true"></i> {% endblock %}{{ block('title') }}</h1>
                        <p>{% block description %}{% endblock %}</p>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
