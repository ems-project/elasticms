<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing https://symfony.com/schema/routing/routing-1.0.xsd">

  <route id="core-favicon" path="favicon.ico"
         controller="EMS\CoreBundle\Controller\ContentManagement\FileController::icon"
         methods="GET|HEAD">
    <default key="width">128</default>
    <default key="height">128</default>
  </route>
  <route id="core-favicon-x" path="favicon-{width}x{height}.png"
         controller="EMS\CoreBundle\Controller\ContentManagement\FileController::icon"
         methods="GET|HEAD">
    <requirement key="width">16|32|48|64|128|256</requirement>
    <requirement key="height">16|32|48|64|128|256</requirement>
  </route>
  <route id="core-apple-touch-icon" path="apple-touch-icon.png"
         controller="EMS\CoreBundle\Controller\ContentManagement\FileController::icon"
         methods="GET|HEAD">
    <default key="width">180</default>
    <default key="height">180</default>
  </route>
  <route id="core-android-chrome-icon" path="android-chrome-{width}x{height}.png"
         controller="EMS\CoreBundle\Controller\ContentManagement\FileController::icon"
         methods="GET|HEAD">
    <requirement key="width">192|256|512</requirement>
    <requirement key="height">192|256|512</requirement>
  </route>
  <route id="core-browserconfig" path="browserconfig.xml"
         controller="EMS\CoreBundle\Controller\ContentManagement\FileController::browserConfig"
         methods="GET|HEAD">
    <default key="_format">xml</default>
  </route>
</routes>
