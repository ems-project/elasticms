{% extends '@EMSAdminUI/bootstrap5/base/admin.html.twig' %}{% trans_default_domain 'emsco-twigs' %}

{% block title %}Save search{% endblock %}
{% block pagetitle %}
	Save search
{% endblock %}
{# {% block subtitle %}{% endblock %} #}



{% block body %}
<div class="row">
	<div id="search-page" class="col-12">

		{{ form_start(form) }}

			<div class="card card-{{ theme_color }} card-outline">
				<div class="card-header">
					<h3>
						<i class="fa fa-search"></i> Preset search form
					</h3>
				</div>
				<div class="card-body">
					<div class="row">
						<div class="col-12">
							{{ form_row(form.name) }}
						</div>
					</div>
				</div>

				<div class="card-footer">
					<div class="form-group">
						<div class="btn-group">
							{{ form_widget(form.save_search) }}
						</div>
					</div>
				</div>
			</div>
		{{ form_end(form) }}
	</div>
</div>
{% endblock %}
