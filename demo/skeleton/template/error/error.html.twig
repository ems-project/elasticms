{% extends '@EMSCH/template/view/language_select.html.twig' %}
{% trans_default_domain trans_default_domain %}

{% set type = (status_code/1) < 500 ? 'warning' : 'danger' %}

{% block title %}{{ status_text }}{% endblock %}

{% block main %}
    <main role="main" class="container mt-5 mb-5" id="main-content">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="alert alert-{{ type }}" role="alert">
                    <h1>{% block icon %}<i class="fa fa-exclamation-triangle" aria-hidden="true"></i> {% endblock %}{{ block('title') }}</h1>
                    <p>
                        {% block description %}{% endblock %}
                    </p>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
