{% trans_default_domain 'EMSCoreBundle' %}

<div class="row">
	<div class="col-12">
		<div class="card card-{{ theme_color }} card-outline">
			{{ form_start(form) }}
			<div class="card-header">
				<h3 class="card-title">{{ label|trans }}</h3>
			</div>

			<div class="card-body">
				<div class="row">
					{{ form_row(form.label) }}
					<div class="clearfix"></div>
					{{ form_row(form.name) }}
					<div class="clearfix"></div>
					{{ form_row(form.alias) }}
					<div class="clearfix"></div>
					{{ form_row(form.public) }}
					{% for item in form.options %}
						<div class="clearfix"></div>
						{{ form_row(item) }}
					{% endfor %}
				</div>
			</div>
			<div class="card-footer">
				{{ form_widget(form.save, {
					'label': save_action_key
				}) }}
			</div>
			{{ form_end(form) }}
		</div>
	</div>
</div>