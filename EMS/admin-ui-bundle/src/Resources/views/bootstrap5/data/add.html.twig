{% extends '@EMSAdminUI/bootstrap5/base/admin.html.twig' %}{% trans_default_domain 'EMSCoreBundle' %}

{% block title %}Add a new {{ contentType.name }}{% endblock %}
{% block pagetitle %}Add a new {{ contentType.name }}{% endblock %}
{% block subtitle %}<small>{{ 'This operation will not index the %object_name%, but initiate a draft only with a specific OUUID'|trans({'%object_name%':contentType.singularName}) }}</small>{% endblock %}


{% block body %}

<div class="row">
	<div class="col-md-6">
		<div class="card card-warning card-outline">
			<div class="card-header">
				<h3 class="card-title"><i class="fa fa-warning"></i> Notice</h3>
			</div>
			<!-- /.box-header -->
			<div class="card-body">
				<p>
					{{ 'This operation will not index a new object ‘<em>%content_type%</em>’ immediately. It will start a new draft without any previous revision. <strong>This draft will not be visible</strong> in any environment <strong>until it has been finalized for the first time</strong>. This means you will not be able to see it in any list view (such as the index, map, calendar...), but all drafts in progress can be found in the ‘Draft in progress’ section.'|trans({ '%content_type%':contentType.name })|raw }}
				</p>
				<p>
					{{ 'About the <strong>object unique identifier</strong>: you are free to specify one (provided it has not been taken yet, of course). If you leave it <strong>empty</strong>, an object unique identifier <strong>will be generated</strong> during the save. It is not possible to update the object unique identifier later.'|trans({ })|raw }}
				</p>
			</div>
			<!-- /.box-body -->
		</div>
	</div>
	<div class="col-md-6">
		<!-- general form elements -->
		<div class="card card-{{ theme_color }} card-outline">
			<div class="card-header">
				<h3 class="card-title">New {{ contentType.name }}</h3>
			</div>
			<!-- /.box-header -->
			<!-- form start -->
			{{ form_start(form) }}

				<div class="card-body">
					{{ form_row(form.ouuid) }}

				</div>
				<!-- /.box-body -->
				<div class="card-footer">
					{{ form_widget(form.save) }}
				</div>
			{{ form_end(form) }}

		</div>
		<!-- /.box -->
	</div>
</div>
{% endblock %}
