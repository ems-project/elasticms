# editorconfig.org
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = LF
indent_size = 2
trim_trailing_whitespace = true
indent_style = space

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.{yml,php,html,twig,js,json}]
indent_size = 4

[*.{js}]
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0
