<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

        <route id="_emsf_debug_iframe" path="/debug/iframe/{ouuid}/{_locale}" methods="GET">
            <default key="_controller">emsf.controller.debug::iframe</default>
            <default key="_locale">%locale%</default>
        </route>

        <route id="_emsf_debug_form" path="/debug/form/{ouuid}/{_locale}" methods="GET|POST">
            <default key="_controller">emsf.controller.debug::form</default>
            <default key="_locale">%locale%</default>
        </route>

        <route id="_emsf_debug_dynamic_field_ajax" path="/debug/ajax/{ouuid}/{_locale}" methods="POST">
            <default key="_controller">emsf.controller.debug::dynamicFieldAjax</default>
            <default key="_locale">%locale%</default>
        </route>

        <route id="_emsf_debug_send_confirmation" path="/debug/send-confirmation/{ouuid}/{_locale}" methods="POST">
            <default key="_controller">emsf.controller.confirmation::postDebug</default>
            <default key="_locale">%locale%</default>
        </route>
</routes>
