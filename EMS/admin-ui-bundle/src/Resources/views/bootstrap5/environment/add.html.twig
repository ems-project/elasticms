{% extends '@EMSAdminUI/bootstrap5/base/admin.html.twig' %}{% trans_default_domain 'EMSCoreBundle' %}

{% block title %}Add a new Environment{% endblock %}
{% block pagetitle %}Add a new Environment{% endblock %}


{% block body %}

<div class="row">
	<div class="col-md-6">
		<div class="card card-warning card-outline">
			<div class="card-header">
				<h3 class="card-title"><i class="fa fa-warning"></i> Notice</h3>
			</div>
			<!-- /.box-header -->
			<div class="card-body">
				<p>
					This operation will create a new elastic search index with an alias pointing to it.
				</p>
			</div>
			<!-- /.box-body -->
		</div>
	</div>
	<div class="col-md-6">
		<!-- general form elements -->
		<div class="card card-{{ theme_color }} card-outline">
			<div class="card-header">
				<h3 class="card-title">New Environment</h3>
			</div>
			<!-- /.box-header -->
			<!-- form start -->
			{{ form_start(form) }}
				<div class="card-body">
					{{ form_row(form.name) }}
					{{ form_row(form.color) }}
{# 					{{ form_row(form.managed) }}#}
				</div>
				<!-- /.box-body -->
				<div class="card-footer">
					{{ form_widget(form.save) }}
				</div>
			{{ form_end(form) }}

		</div>
		<!-- /.box -->
	</div>
</div>
{% endblock %}
